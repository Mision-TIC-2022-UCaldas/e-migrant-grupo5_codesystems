@page
@model Hackaton.App.Frontend.Pages.ListarMigrantesModel
@{
}
<h1>Migrantes</h1>
<table class="table">
    
<th scope="col" > Numero Documento</td>
<th scope="col" > Nombres</td>
<th scope="col" > Apellidos</td>
<th scope="col" > Pais de Origen</td>
<th scope="col" > Fecha de Nacimiento</td>
<th scope="col" > Correo Electronico</td>
<th scope="col" > Numero de Telefono</td>
<th scope="col" > Direccion</td>
<th scope="col" > Ciudad</td>
<th scope="col" > Situacion Laboral</td>

    @foreach (var item in Model.Migrantes)
    {

        <tr>

            <td > @item.NumeroDocumento</td>
            <td > @item.Nombres</td>
            <td > @item.Apellidos</td>
            <td > @item.PaisOrigen</td>
            <td > @item.FechaNacimiento</td>
            <td > @item.Correo</td>
            <td > @item.NumeroTelefono</td>
            <td > @item.Direccion</td>
            <td > @item.Ciudad</td>
            <td > @item.SituacionLaboral</td>


                <td> <a class="btn btn-primary table-btn" asp-page="/MigrantesPages/EdCrMigrantes" asp-route-id="@item.id">
                <i class="fas fa-user-edit fa-lg" aria-hidden="true">Actualizar</i></a></td>

        </tr>

}

</table>

<a asp-page="/MigrantesPages/EdCrMigrantes" class="btn btn-primary">Nuevo Registro</a>
